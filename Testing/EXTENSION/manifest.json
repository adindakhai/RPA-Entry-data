{
  "manifest_version": 3,
  "name": "Asisten Entri Data NDE ke MTL",
  "version": "1.4",
  "description": "Membantu memindahkan data dari NDE ke MTL secara otomatis.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "file:///*",
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "file:///*IA%20Telkom.mhtml",
        "file:///*IA Telkom.mhtml"
      ],
      "js": [
        "ia_telkom_filler.js",
        "custom_popup_injector.js"
      ],
      "css": [
        "custom_popup.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "MOCKUP/mtl_mockup.html",
        "custom_popup.css"
      ],
      "matches": [
        "file:///*"
      ]
    }
  ]
}